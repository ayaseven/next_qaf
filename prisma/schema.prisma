// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // В Prisma 7+ кастомный путь (output) становится обязательным
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // URL здесь больше не нужен, он берется из prisma.config.ts
}

model User {
  id Int @id @default(autoincrement())

  fullName String
  email    String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  name     String
  imageUrl String
  text     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
